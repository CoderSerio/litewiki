{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf"
  },
  "organizeImports": { "enabled": false },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off",
        "noAssignInExpressions": "off"
      },
      "complexity": {
        "noForEach": "off",
        "useOptionalChain": "off"
      },
      "correctness": {
        "noUnnecessaryContinue": "off"
      },
      "style": {
        "noParameterAssign": "off",
        "noUnusedTemplateLiteral": "off",
        "useTemplate": "off"
      }
    }
  },
  "files": {
    "ignore": ["dist/**", "build/**", ".npm-cache/**", "node_modules/**"]
  }
}
